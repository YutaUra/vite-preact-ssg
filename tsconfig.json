{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@styled-system/*": ["./styled-system/*"],
      "@design-system/*": ["./design-system/*"]
    }
  },
  "include": [
    "src",
    "server.ts",
    "styled-system",
    "design-system",
    ".storybook"
  ],
  "exclude": ["dist"]
}
