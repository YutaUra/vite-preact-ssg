{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@styled-system/*": ["./styled-system/*"]
    }
  },
  "include": ["src", "server.ts", "styled-system"],
  "exclude": ["dist"]
}
